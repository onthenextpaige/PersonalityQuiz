<Window x:Class="PersonalityQuiz.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalityQuiz"
        mc:Ignorable="d"
        Title="ResultsWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="155*"/>
            <RowDefinition Height="210*"/>
        </Grid.RowDefinitions>
        <Label Content="Your personality type is..." HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="49" Width="275" FontSize="24" FontStyle="Italic"/>
        <TextBlock x:Name="resultBlock" HorizontalAlignment="Center" Grid.Row="1" Text="?" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="60" FontWeight="Bold"/>
        <TextBlock x:Name="descriptionBlock" HorizontalAlignment="Center" Grid.Row="2" Text="?" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="24"/>

    </Grid>
</Window>
